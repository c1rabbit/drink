<!DOCTYPE html>
<html>
  <%- include('../partials/head') %>
  <body>

    <%- include ../partials/menu-admin %>

    <div class='container'>
      <h2 class='text-center'>Are you sure you want to permanently delete this store?</h2>
      <form action='/admin/store/<%= store._id%>?_method=DELETE' method="post">
        <div>
          <label>Name:</label>
          <input type='text' name='name' value="<%= store.name %>"/>
        </div>
        <div>
          <label>Address:</label>
          <input type="text" name='addr1' value='<%= store.address.addr1 %>'/>
        </div>
        <div>
          <label>City: </label>
          <input type="text" name='city' value='<%= store.address.city %>'/>
        </div>
        <div>
          <label>State:</label>
          <input type="text" name='state' value='<%= store.address.state %>'/>
        </div>
        <div>
          <label>Postal Code:</label>
          <input type="text" name='postalCode' value='<%= store.address.postalCode %>'/>
        </div>

        <div class="container text-center">
          <span class='col'>
            <a href="/admin/" class="btn btn-outline-primary col" role="button" aria-pressed="true">Cancel</a>
          </span>
          <span class='col'>
            <input type='submit' value="Delete" class='col col-form-submit btn btn-danger'/>
          </span>
        </div>



      </form>



    </div>
    <%- include ../partials/footer %>
    <%- include ../partials/formFormatterPlainText %>
  </body>
</html>
